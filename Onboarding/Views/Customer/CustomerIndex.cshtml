
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>



<div ng-controller="Customer" class="">
    <script type="text/ng-template" id="myModalContent">
        <div class="modal-header">
            <h3 class="modal-title" id="modal-title" ng-model="title">{{title}}</h3>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" ng-model="customer.CustomerName">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="pwd" ng-model="customer.Address1">
                </div>
                <div class="form-group">
                    <label for="town_city">Town/City</label>
                    <input type="text" class="form-control" id="pwd" ng-model="customer.Town_City">
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok(customer)">OK</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>

    <script type="text/ng-template" id="deleteModal">
        <div class="modal-header">
            <h3 class="modal-title" id="modal-title" ng-model="title">{{title}}</h3>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" ng-model="customer.CustomerName" disabled>
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="pwd" ng-model="customer.Address1" disabled>
                </div>
                <div class="form-group">
                    <label for="town_city">Town/City</label>
                    <input type="text" class="form-control" id="pwd" ng-model="customer.Town_City" disabled>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok(customer)">OK</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>


    <button type="button" class="btn btn-primary" ng-click="openAdd()">Add</button>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Town/City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="customer in customers">
                <td>{{customer.CustomerName}}</td>
                <td>{{customer.Address1}}</td>
                <td>{{customer.Address2}}</td>
                <td>{{customer.Town_City}}</td>
                <td><a href="#" ng-click="openUpdate(customer)">[Edit]</a><br /><a href="#" ng-click="openDelete(customer)">[Delete]</a></td>
            </tr>
        </tbody>
    </table>

</div>



